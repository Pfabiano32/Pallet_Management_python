                padding: (0, 10, 0, 0)
                pos_hint: {'center_x': 0.5, 'y': 0}  # üëà NO FUNDO DO LAYOUT PAI
                
                # Input de Data
                RoundedTextInput:
                    id: data_input
                    hint_text: "Data (DD/MM/AAAA)"
                    size_hint_x: 0.2
                    font_size: '16sp'

                # Bot√£o Registrar
                RoundedButton:
                    text: "Registrar"
                    size_hint_x: 0.2
                    base_color: get_color_from_hex('#1565C0')
                    on_press: root.registrar_pallets()
        
        # --- BOT√ïES INFERIORES ---
        BoxLayout:
            size_hint_y: None
